!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= content_for?(:title) ? yield(:title) : ""
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "http://html5shim.googlecode.com/svn/trunk/html5.js"
    = stylesheet_link_tag "application", :media => "all"
    = javascript_include_tag "application"
    %link(href="images/apple-touch-icon-144x144.png" rel="apple-touch-icon-precomposed" sizes="144x144")
    %link(href="images/apple-touch-icon-114x114.png" rel="apple-touch-icon-precomposed" sizes="114x114")
    %link(href="images/apple-touch-icon-72x72.png" rel="apple-touch-icon-precomposed" sizes="72x72")
    %link(href="images/apple-touch-icon.png" rel="apple-touch-icon-precomposed")
    = favicon_link_tag

  %body
    .container
      .row
        .span6
          %h1.brand
            = link_to 'Moviezzz', root_path
        .span6.tr
          %h1
            - if not current_path?(movies_path) and not current_path?(root_path)
              %a.pull-right{href: movies_path}
                %i.icon-arrow-left
                Back to list
            - else
              %a.pull-right{href: new_movie_path}
                Add movie
                %i.icon-arrow-right

  .container
    .row
      .span12
        - flash.each do |msg_type, message| # error, success and info
          .alert{class: "alert-#{msg_type}"}
            %button.close{type: :button, :'data-dismiss' => :alert} &times;
            %span= message

    .row
      .span12
        = yield

