!!! 5
%head
  %title Moviez
  = stylesheet_link_tag 'application', media: 'all'
  = javascript_include_tag 'application'
  = csrf_meta_tags
  %meta{name: 'viewport', content: 'width=device-width, initial-scale=1.0'}
%body
  .navbar.navbar-inverse.navbar-fixed-top
    .navbar-inner
      .container
        = link_to 'Moviezzz', root_path, class: 'brand'
        .nav-collapse.collapse
          %ul.nav
            %li= link_to 'All movies', movies_path
            %li= link_to 'About', '/about'

  .container
    .row
      .span12
        - [:alert, :success, :info].each do |msg_type|
          .alert-box{class: msg_type}
            %a.close{href: '#'} &times
            %span= flash[msg_type]

    .row
      .span12
        = yield
