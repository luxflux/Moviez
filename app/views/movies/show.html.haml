- model_class = Movie
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:title) + ':'
  %br
  = @movie.title
%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @movie.description
%p
  %strong= model_class.human_attribute_name(:disc_number) + ':'
  %br
  = @movie.disc_number
%p
  %strong= model_class.human_attribute_name(:watched) + ':'
  %br
  = @movie.watched

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), movies_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_movie_path(@movie), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), movie_path(@movie), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
