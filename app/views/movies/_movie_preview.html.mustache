<div class="accordion-group">
  <div class="accordion-heading">
    <a class="accordion-toggle" data-toggle="collapse" data-parent="#movie_preview" href="#preview-{{moviePreview.id}}">
      {{moviePreview.title}}
      {{#moviePreview.tagline}}- {{moviePreview.tagline}}{{/moviePreview.tagline}}
      ({{moviePreview.year}})</a>
  </div>
  <div id="preview-{{moviePreview.id}}" class="accordion-body collapse">
    <div class="accordion-inner">
      <img src="{{moviePreview.image}}" class="text-floats-right img-polaroid" />
      {{moviePreview.overview}}
    </div>
  </div>
</div>
