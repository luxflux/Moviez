<div class="row-fluid">
  <div class="span2">
    <img src="{{cover_url}}" class="img-polaroid">
  </div>
  <div class="span10">
    <div class="row-fluid">
      <div class="span12">
        {{#tagline}}
        <span class="lead">{{tagline}}</span>
        {{/tagline}}
        <p>{{overview}}</p>
      </div>
    </div>
    <div class="row-fluid">
      <div class="span3"><strong>Length</strong></div>
      <div class="span3">{{length}}</div>
      <div class="span3"><strong>Languages</strong></div>
      <div class="span3">{{languages}}</div>
    </div>
    <div class="row-fluid">
      <div class="span3"><strong>Genre</strong></div>
      <div class="span9">{{genres}}</div>
    </div>
    <div class="row-fluid">
      <div class="span3"><strong>Cast</strong></div>
      <div class="span9">{{cast}}</div>
    </div>
    <div class="row-fluid">
      <div class="span12">
        <a href="http://imdb.com/title/{{imdb_id}}/" class="btn btn-primary" target="_blank">Show on IMDB</a>
        <a href="http://www.themoviedb.org/movie/{{id}}/" class="btn btn-primary" target="_blank">Show on TMDB</a>
        <button class="btn btn-primary" name="movie[tmdb_id]" value="{{id}}">Select</button>
      </div>
    </div>
  </div>
</div>
